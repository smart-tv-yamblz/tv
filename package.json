{
    "name": "ru.yandex.cordova",
    "displayName": "Yandex Music",
    "version": "1.0.0",
    "description": "Yandex Music for Smart TV",
    "main": "index.js",
    "scripts": {
        "clear-assets": "rm -rf ./www/assets",
        "copy-dev-html": "cp ./src/index.dev.html ./www/index.html",
        "start": "npm run copy-dev-html && webpack-dev-server --env development",
        "build": "npm run clear-assets && webpack --env production"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cordova-browser": "^4.1.0",
        "cordova-plugin-whitelist": "^1.3.2",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0"
    },
    "devDependencies": {
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2016": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "html-webpack-plugin": "^2.30.1",
        "react-hot-loader": "^3.0.0-beta.7",
        "webpack": "^3.5.3",
        "webpack-dev-server": "^2.7.1",
        "webpack-merge": "^4.1.0"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "browser"
        ]
    }
}